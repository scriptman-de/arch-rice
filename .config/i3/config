# vim:filetype=i3
# i3 config file (v4)
# scriptman-de i3-gaps config. last update 2019-11-03

## Basics

for_window [class="^.*"] border pixel 3
default_border pixel 3
font pango:Ubuntu 13
floating_modifier $mod

bindsym $mon+Shift+Escape exec 'systemctl poweroff'

# Colors
 	set $bg-color 	         #2f343f
 	set $inactive-bg-color   #2f343f
 	set $text-color          #99CCFF
 	set $inactive-text-color #676E7D
 	set $urgent-bg-color     #2f343f
 	set $windowcolor         #A11581

# Variables
	set $mod Mod4
	set $mods Mod1+Shift
  set $modsc Mod1+Shift+Control
	set $hyper Mod1+Shift+Control+Mod4

	set $ws1 "1"
	set $ws2 "2"
	set $ws3 "3"
	set $ws4 "4"
	set $ws5 "5"
	set $ws6 "6"
	set $ws7 "7"
	set $ws8 "8"
	set $ws9 "9"
	set $ws10 "10"

	set $browser "chromium"
	set $terminal "urxvt"
	set $ni --no-startup-id

# Workspace screen locations
	#Left   = DP-1
	#Middle = HDMI-0
	#workspace $ws1 output HDMI-0
	#workspace $ws2 output HDMI-0
	#workspace $ws3 output HDMI-0
	#workspace $ws4 output DP-1
	#workspace $ws5 output DP-1
	#workspace $ws6 output DP-1
	#workspace $ws7 output DP-1
	#workspace $ws8 output DP-1
	#workspace $ws9 output DP-1
	#workspace $ws10 output DP-1

# Switch to workspace
	bindsym $mod+1 		workspace $ws1
	bindsym $mod+2 		workspace $ws2
	bindsym $mod+3 		workspace $ws3
	bindsym $mod+4 		workspace $ws4
	bindsym $mod+5 		workspace $ws5
	bindsym $mod+6 		workspace $ws6
	bindsym $mod+7 		workspace $ws7
	bindsym $mod+8 		workspace $ws8
	bindsym $mod+9 		workspace $ws9
	bindsym $mod+0 		workspace $ws10
